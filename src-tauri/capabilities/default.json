{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "/**" }]
    },
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-app-meta-recursive",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "dialog:default",
    "dialog:allow-save",
    "core:window:allow-start-dragging"
  ]
}
