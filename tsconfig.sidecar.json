{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist/mcp-server",
    "rootDir": "src/mcp-server",
    "noEmit": false
  },
  "include": ["src/mcp-server/**/*.ts"],
  "exclude": ["node_modules"]
} 